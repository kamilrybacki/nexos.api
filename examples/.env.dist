# NEXOSAI API Configuration
# Base URL for the API service (required)
NEXOSAI__BASE_URL=https://api.nexos.ai

# API key for authentication (required)
NEXOSAI__API_KEY=your_api_key_here

# API version (optional, defaults to v1)
NEXOSAI__VERSION=v1

# Request timeout in seconds (optional, defaults to 30)
NEXOSAI__TIMEOUT=30

# Number of retries for failed requests (optional, defaults to 3)
NEXOSAI__RETRIES=3

# Use exponential backoff for retries (optional, defaults to True)
NEXOSAI__EXPONENTIAL_BACKOFF=True

# Minimum wait time between retries in seconds (optional, defaults to 1)
NEXOSAI__MINIMUM_WAIT=1

# Maximum wait time between retries in seconds (optional, defaults to 10)
NEXOSAI__MAXIMUM_WAIT=10

# Whether to reraise exceptions after retries (optional, defaults to True)
NEXOSAI__RERAISE_EXCEPTIONS=True

# Rate limit per second, 0 means no limit (optional, defaults to 0)
NEXOSAI__RATE_LIMIT=0

# Follow HTTP redirects (optional, defaults to True)
NEXOSAI__FOLLOW_REDIRECTS=True
